@using Microsoft.Extensions.Options
@inject IOptions<StripeDemo.Services.StripeSettings> Stripe

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form asp-action="charge" asp-controller="Home" method="post">
        <article>
            <label>Amount: $10.00</label>
        </article>
        <script src="//checkout.stripe.com/v3/checkout.js"
                class="stripe-button"
                data-key="@Stripe.Value.PublishableKey"
                data-locale="auto"
                data-description="Sample cherge"
                data-amount="500">            
        </script>
    </form>
</div>
